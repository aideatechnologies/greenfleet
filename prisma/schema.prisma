// Fattori di emissione per-gas per MacroFuelType (globale, no tenantId)
// 7 gas Kyoto: CO2, CH4, N2O, HFC, PFC, SF6, NF3
model EmissionFactor {
  id              String   @id @default(cuid())
  macroFuelTypeId String?  @map("macro_fuel_type_id")
  co2             Float    @default(0) // kg CO2 per unita (L o kWh)
  ch4             Float    @default(0) // kg CH4 per unita
  n2o             Float    @default(0) // kg N2O per unita
  hfc             Float    @default(0) // kg HFC per unita
  pfc             Float    @default(0) // kg PFC per unita
  sf6             Float    @default(0) // kg SF6 per unita
  nf3             Float    @default(0) // kg NF3 per unita
  source          String   @db.NVarChar(100)
  effectiveDate   DateTime @map("effective_date")
  createdBy       String   @map("created_by")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Colonne legacy (nullable dopo migrazione)
  fuelType String? @map("fuel_type")
  value    Float?

  macroFuelType MacroFuelType? @relation(fields: [macroFuelTypeId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([fuelType, effectiveDate], map: "idx_emission_factors_fuel_type_date")
  @@index([macroFuelTypeId, effectiveDate], map: "idx_emission_factors_macro_date")
  @@map("EmissionFactors")
}

