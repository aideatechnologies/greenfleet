# =============================================================================
# GREENFLEET - Environment Variables Template
# =============================================================================
# Copy to .env.local and fill in values

# DATABASE - SQL Server
DATABASE_URL="sqlserver://USER:PASSWORD@localhost:1433;database=GREENFLEET;encrypt=true;trustServerCertificate=true"

# BETTER AUTH
BETTER_AUTH_SECRET="generate-with-openssl-rand-base64-32"
BETTER_AUTH_URL="http://localhost:3000"

# NEXT.JS
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# SQL Server - Infocar Database (Read-only)
INFOCAR_SERVER=""
INFOCAR_DATABASE=""
INFOCAR_USER=""
INFOCAR_PASSWORD=""
INFOCAR_TABLE_PREFIX="IDAT"
INFOCAR_REFERENCE_PERIOD=""

# InfocarData Integration (API HTTP)
INFOCARDATA_API_URL=""
INFOCARDATA_API_KEY=""
INFOCARDATA_TIMEOUT_MS="30000"
INFOCARDATA_BATCH_SIZE="100"

# Codall Image Service
# URL base del servizio Codall per le immagini veicoli (pattern: {url}/{ANNOXX}{MESEXX}{CODALL})
CODALL_API_URL=""
# Timeout per le richieste a Codall in millisecondi (default: 5000)
CODALL_TIMEOUT_MS="5000"

# LOGGING
LOG_LEVEL="debug"
